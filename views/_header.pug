header.header 
  nav.nav.nav--tours.header__logo
    a.nav__el(href='/')
      img(src='/img/logo.png' alt='Logo')
  nav.nav.nav--user
    if user 
      a.nav__el(href='/character-list') Characters
      a.nav__el(href='/spell-list') Spells
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log In
      a.nav__el.nav__el--cta(href='/signup') Sign Up